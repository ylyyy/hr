
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>position_release_search</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <link href="~/css/cwcalendar.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
    <script src="~/javascript/comm/list.js"></script>
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script src="~/javascript/calendar-ch.js"></script>
    <script src="~/javascript/locate.js"></script>
    <script src="~/javascript/select.js"></script>
    <script type="text/javascript">
        var currentPage = 1;
        var pages=0;
        function jiaZai() {
            $.post("/position/position_change_Index", { "currentPage": currentPage }, function (data) {
                var datas = eval("(" + data + ")");
                var $table = $("#tb1");
                pages = datas["pages"];
                $("#tb1 tr:gt(0)").remove();
                for (var i = 0; i < datas["list"].length; i++) {
                    var $tr = $("<tr></tr>");
                    var $td = $("<td class='TD_STYLE2'>" + datas["list"][i]["major_name"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["second_kind_name"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["human_amount"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["regist_time"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["deadline"] + "</td>");
                    var $td1 = $("<td class='TD_STYLE2'><a href='/position/position_release_details/" + datas["list"][i]["mre_id"] + "'>申请该职位<a></td>");
                    $tr.append($td, $td1);
                    $table.append($tr);
                }
                $("#yi").text("总数" + datas["rows"] + "例");
                $("#er").text("当前第" + currentPage + " 页 /每页显示 2条");
                $("#san").text("共" + datas["pages"] + "页 ");
            });
        }
        $(function () {
            jiaZai()
            $("#shang").click(function () {
                if (currentPage > 1) {
                    currentPage--;
                    jiaZai()
                }
            });
            $("#xia").click(function () {
                if (currentPage < pages) {
                    currentPage++;
                    jiaZai()
                }
            });
            $("#tiao").click(function () {
                var currPage = $("#currPage").val();
                if (currPage >= 1 && currPage <= pages) {
                    currentPage = currPage;
                    jiaZai()
                } else {
                    alert("输入的值大于该页数，或者小于0");
                }
            });
        })
    </script>
</head>
<body>
    <div>
        <input type="hidden" name="utilBean.currPage" id="page" />
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--招聘管理--职位发布管理--职位发布查询
                    </font>
                </td>
            </tr>

        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1" id="tb1">
            <tr>
                <td width="15%" class="TD_STYLE1">
                    职位名称
                </td>
                <td width="20%" class="TD_STYLE1">
                    公司名称
                </td>
                <td width="10%" class="TD_STYLE1">
                    招聘人数
                </td>
                <td width="20%" class="TD_STYLE1">
                    发布时间
                </td>
                <td width="20%" class="TD_STYLE1">
                    截止时间
                </td>
                <td width="8%" class="TD_STYLE1">
                    申请职位
                </td>
            </tr>

        </table>
        <p>
            &nbsp;&nbsp;<span id="yi"></span> &nbsp;&nbsp;&nbsp;<span id="er"></span> &nbsp;&nbsp;&nbsp;<span id="san"></span> &nbsp;&nbsp;&nbsp;
            <a href="javascript:void(0)" id="shang">上一页</a> &nbsp;&nbsp;&nbsp;
            <a href="javascript:void(0)" id="xia">下一页</a> &nbsp;&nbsp;&nbsp;跳到第 <input name=page type=text class=input1 id="currPage" size=1> 页&nbsp;&nbsp;<input type="image" src="../../../images/go.bmp" width=18 height=18 border=0 id="tiao">
    </div>
</body>
</html>
