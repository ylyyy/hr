    <script>
        $(function () {
            chayear();
        });
        //查询年份
        function chayear() {
            var myDate = new Date();
            var thisYear = myDate.getFullYear();  // 获取当年年份
            var Section = thisYear - 2008;  // 声明一个变量 获得当前年份至想获取年份差 eg.2008
            var arrYear = []; // 声明一个空数组 把遍历出的年份添加到数组里
            for (var i = 0; i <= Section; i++) {
                arrYear.push(thisYear--)
            } // 遍历并添加年份到数组
            // arrYear里是2008年到当前的所有年份了
            for (var i = 0; i < arrYear.length; i++) {
                var $option = $('<option value="' + arrYear[i] + '">' + arrYear[i] + '</option>');
                $("#year").append($option);
            }
        }
    </script>
