
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="../../css/table.css"
          type="text/css"></link>
    <STYLE type="text/css">
    </STYLE>
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script>
        var currentPage = 1;
        var pages = 0;
        var rows = 0;
        function jiaZai() {
            $.post("/transfer/register_xiangQing", { "currentPage": currentPage }, function (data) {
                var datas = eval("(" + data + ")");
                var $table = $("#tb1");
                pages = datas["pages"];
                rows = datas["rows"];
                $("#tb1 tr:gt(0)").remove();
                for (var i = 0; i < datas["list"].length; i++) {
                    var $tr = $("<tr></tr>");
                    var $td = $("<td class='TD_STYLE2'>" + datas["list"][i]["first_kind_name"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["second_kind_name"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["third_kind_name"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["salary_standard_name"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["human_name"] + "</td>");
                    var $td1 = $("<td class='TD_STYLE2'><a href='/transfer/register/" + datas["list"][i]["huf_id"] + "'>调动<a></td>");
                    $tr.append($td, $td1);
                    $table.append($tr);
                }
                $("#yi").text(datas["rows"]);
                $("#er").text(currentPage);
                $("#san").text(datas["pages"]);
            });
        }
        $(function () {
            jiaZai()
            $("#shou").click(function () {
                currentPage = 1;;
                jiaZai()
            })
            $("#shang").click(function () {
                if (currentPage > 0) {
                    currentPage--;
                    jiaZai()
                }
            });
            $("#xia").click(function () {
                if (currentPage <= pages) {
                    currentPage++;
                    jiaZai();
                }
            });
            $("#wei").click(function () {
                currentPage = rows;
                jiaZai();
            })
            $("#tiao").click(function () {
                var currPage = $("#page").val();
                if (currPage >= 1 && currPage <= pages) {
                    currentPage = currPage;
                    jiaZai()
                } else {
                    alert("输入的值大于该页数，或者小于0");
                }
            });
        })
    </script>
</head>
<body onload="">
        <font color="black"> 您在做的业务是-人力资源-调动管理-调动登记列表 </font>
        <br /><br /><br />
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1" id="tb1">
            <tr height="21">
                <td width="19%" class="TD_STYLE1">
                    I级机构
                </td>
                <td width="19%" class="TD_STYLE1">
                    II级机构
                </td>
                <td width="19%" class="TD_STYLE1">
                    Ⅲ级机构
                </td>
                <td width="19%" class="TD_STYLE1">
                    薪酬标准
                </td>
                <td width="19%" class="TD_STYLE1">
                    名字
                </td>
                <td width="5%" class="TD_STYLE1">
                    调动

                </td>

            </tr>
        </table>
            <p>
                <div align="center" style="font-size: 18px;color: gray">
                    &nbsp;&nbsp;总数：
                    <font style="color: maroon;font-weight: bold;"><span id="yi"></span></font>
                    例
                    &nbsp;&nbsp;&nbsp;
                    每页显示 <font style="color: maroon;font-weight: bold;">2</font>
                    条
                    &nbsp;&nbsp;&nbsp;
                    当前第 <font style="color: maroon;font-weight: bold;"><span id="er"></span></font>
                    页
                    &nbsp;&nbsp;&nbsp;共
                    <font style="color: maroon;font-weight: bold;"><span id="san"></span></font>
                    页
                    <a style="color: navy;font-weight: bold" href="javascript:void(0)" id="shou">首页</a>

                    <a style="color: navy;font-weight: bold"
                       href="javascript:void(0)" id="shang">上一页</a>

                    <a style="color: navy;font-weight: bold"
                       href="javascript:void(0)" id="xia">下一页</a>

                    <a style="color: navy;font-weight: bold"
                       href="javascript:void(0)" id="wei">末页</a>
                    &nbsp;&nbsp;&nbsp;跳到第
                    <input id=page type=text  class=input1 size=1>
                    页&nbsp;&nbsp;
                    <input type="image" onclick="dopagebybutton()" src="../../images/go.bmp" width=18 height=18 border=0 id="tiao">
                    <input type="hidden" name="page.startPage" id="startpage" value="1">
                </div>
</body>
</html>
