
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>change_list</title>
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
</head>
<body>
    <input type="hidden" id="firstKindId" value="@ViewData["firstKindId"]" />
    <input type="hidden" id="secondKindId" value="@ViewData["secondKindId"]" />
    <input type="hidden" id="thirdKindId" value="@ViewData["thirdKindId"]" />
    <input type="hidden" id="humanMajorKindId" value="@ViewData["humanMajorKindId"]" />
    <input type="hidden" id="humanMajorId" value="@ViewData["humanMajorId"]" />
    <input type="hidden" id="startDate" value="@ViewData["startDate"]" />
    <input type="hidden" id="endDate" value="@ViewData["endDate"]" />
    <table width="100%">
        <tr>
            <td>
                <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案查询 </font>
            </td>
        </tr>
        <tr>
            <td>
                符合条件的人力资源档案总数：<span id="rowss"></span>例
            </td>
        </tr>
    </table>
    <table width="100%" border="1" cellpadding=5 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1" id="salary_tr">
        <tr class="TR_STYLE1">
            <td width="16%" class="TD_STYLE1">
                档案编号
            </td>
            <td width="13%" class="TD_STYLE1">
                姓名
            </td>
            <td width="8%" class="TD_STYLE1">
                性别
            </td>
            <td width="14%" class="TD_STYLE1">
                I级机构
            </td>
            <td width="14%" class="TD_STYLE1">
                II级机构
            </td>
            <td width="14%" class="TD_STYLE1">
                III级机构
            </td>
            <td width="14%" class="TD_STYLE1">
                职位分类
            </td>
            <td width="7%" class="TD_STYLE1">
                职位名称
            </td>
        </tr>


    </table>
    <div align="center" style="font-size: 18px;color: gray">
        &nbsp;&nbsp;总数：
        <font style="color: maroon;font-weight: bold;"><span id="rows"></span></font>
        例
        &nbsp;&nbsp;&nbsp;
        每页显示 <font style="color: maroon;font-weight: bold;">10</font>
        条
        &nbsp;&nbsp;&nbsp;
        当前第 <font style="color: maroon;font-weight: bold;"><span id="currentpage"></span></font>
        页
        &nbsp;&nbsp;&nbsp;共
        <font style="color: maroon;font-weight: bold;"><span id="pages"></span></font>
        页
        <a style="color: navy;font-weight: bold" href="#" onclick="sy()">首页</a>

        <a style="color: navy;font-weight: bold" href="#" onclick="syy()">上一页</a>

        <a style="color: navy;font-weight: bold" href="#" onclick="xyy()">下一页</a>

        <a style="color: navy;font-weight: bold" href="#" onclick="wy()">末页</a>
        &nbsp;&nbsp;&nbsp;跳到第
        <input id="page" type=text value="1" class=input1 size=1>
        页&nbsp;&nbsp;
        <input type="image" onclick="tz()" src="../../images/go.bmp" width=18 height=18 border=0>

    </div>
    <script>
        function tz() {
            if (Number($("#page").val()) <= Number($("#pages").text()) && Number($("#page").val()) >= 1) {
                fenye(Number($("#page").val()));
            } else {
                alert("输入的页数错误！");
            }
        }
        $(function () {
            fenye(1);
        });
        function syy() {
            if (Number($("#currentpage").text()) > 1) {
                var currentpage = Number($("#currentpage").text()) - 1;
                fenye(currentpage);
            }
            else {
                alert('已经是第一页了！');
            }
        }
        function sy() {
            fenye(1);
        }
        function xyy() {
            if (Number($("#currentpage").text()) < Number($("#pages").text())) {
                var currentpage = Number($("#currentpage").text()) + 1;
                fenye(currentpage);
            } else {
                alert('已经是最后一页了！');
            }
        }
        function wy() {
            fenye(Number($("#pages").text()));
        }
        function fenye(currentpage) {
            $.post("/humanResources/query_list", { "firstKindId": $("#firstKindId").val(), "secondKindId": $("#secondKindId").val(), "thirdKindId": $("#thirdKindId").val(), "humanMajorKindId": $("#humanMajorKindId").val(), "humanMajorId": $("#humanMajorId").val(), "startDate": $("#startDate").val(), "endDate": $("#endDate").val(), "currentPage": currentpage }, function (data) {
                $("#salary_tr tr:gt(0)").remove();
                $("#rows").text(data.rows);
                $("#rowss").text(data.rows);
                $("#pages").text(data.pages);
                $("#currentpage").text(data.currentpage);
                for (var i in data.list) {
                    var er = data.list[i]["second_kind_name"];
                    var san = data.list[i]["third_kind_name"];
                    var major_kind_name = data.list[i]["human_major_kind_name"];
                    var major_name=data.list[i]["hunma_major_name"];
                    if (er == null) {
                        er = "";
                    }
                    if (san == null) {
                        san = "";
                    }
                    if (major_kind_name==null) {
                        major_kind_name = "";
                    }
                    if (major_name==null) {
                        major_name = "";
                    }
                    var $tr = $('<tr class="TR_STYLE2"><td width="16%" class="TD_STYLE2"><a href="/humanResources/change_list_information?hmid=' + data.list[i]["human_id"] + '">' + data.list[i]["human_id"] + '</a></td><td width="13%" class="TD_STYLE2">' + data.list[i]["human_name"] + '</td><td width="8%" class="TD_STYLE2">' + data.list[i]["human_sex"] + '</td><td width="14%" class="TD_STYLE2">' + data.list[i]["first_kind_name"] + '</td><td width="14%" class="TD_STYLE2">' + er + '</td><td width="14%" class="TD_STYLE2">' + san + '</td><td width="14%" class="TD_STYLE2">' + major_kind_name + '</td><td width="7%" class="TD_STYLE2">' + major_name + '</td></tr>');
                    $("#salary_tr").append($tr);
                }
            }, 'json');
        }
    </script>
</body>
</html>
