
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>change_list_information</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../css/cwcalendar.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script language="javascript"
            src="../../javascript/winopen/winopenm.js">
    </script>
    <script type="text/javascript"
            src="../../javascript/calendar-ch.js">
    </script>
    <script type="text/javascript"
            src="../../javascript/jquery-1.7.2.js">
    </script>
    <script type="text/javascript"
            src="../../javascript/jquery.messager.js">
    </script>
    <script src="../../javascript/time.js"></script>
    <script type="text/javascript"
            src="../../javascript/human_check.js">
    </script>
    <script type="text/javascript"
            src="../../javascript/human_input_check.js">
    </script>
    <script src="~/javascript/comm/time.js"></script>
</head>
<body>
    <form action="/humanResources/register_choose_picture_bgen" method="post" enctype="multipart/form-data">
        @{ human_file hm = ViewData["hm"] as human_file;}
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案变更 </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="确认变更" onclick="tijiao()" class="BUTTON_STYLE1" />
                    <input type="reset" value="清除" class="BUTTON_STYLE1">
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back()">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=3 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td class="TD_STYLE1" width="10%">
                    档案编号
                    <input type="hidden" name="huf_id" value="@hm.huf_id" />
                    <input type="hidden" name="isalary_sum" value="@hm.salary_sum" />
                    <input type="hidden" name="idemand_salaray_sum" value="@hm.demand_salaray_sum" />
                    <input type="hidden" name="ipaid_salary_sum" value="@hm.paid_salary_sum" />
                    <input type="hidden" name="imajor_change_amount" value="@hm.major_change_amount" />
                    <input type="hidden" name="ibonus_amount" value="@hm.bonus_amount" />
                    <input type="hidden" name="itraining_amount" value="@hm.training_amount" />
                    <input type="hidden" name="ifile_chang_amount" value="@hm.file_chang_amount" />
                    <input type="hidden" name="iregister" value="@hm.register" />
                    <input type="hidden" name="icheck_time" value="@hm.check_time" />
                    <input type="hidden" name="ilastly_change_time" value="@hm.lastly_change_time" />
                    <input type="hidden" name="idelete_time" value="@hm.delete_time" />
                    <input type="hidden" name="irecovery_time" value="@hm.recovery_time" />
                    <input type="hidden" name="checker" value="@hm.checker"/>
                    <input type="hidden" name="check_time" value="@hm.check_time"/>
                    <input type="hidden" name="human_picture" value="@hm.human_picture" />
                    <input type="hidden" name="attachment_name" value="@hm.attachment_name" />
                    <input type="hidden" name="regist_time" value="@hm.regist_time" />
                </td>
                <td colspan="6" class="TD_STYLE2">
                    <input type="text" value="@hm.human_id" readonly="readonly" name="human_id" class="INPUT_STYLE2" />
                </td>
                <td rowspan="6" width="13%" style="text-align: center;">
                    @if (@hm.human_picture != "")
                    {
                        <img src="../../images/@hm.human_picture" style="width:120px;height:150px;" />
                    }
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1" width="10%">
                    I级机构
                </td>
                <td width="13%" class="TD_STYLE2">
                    <input type="hidden" value="@hm.first_kind_id" readonly="readonly" name="first_kind_id" class="INPUT_STYLE2" />
                    <input type="text" value="@hm.first_kind_name" readonly="readonly" name="first_kind_name" class="INPUT_STYLE2" />
                </td>
                <td width="10%" class="TD_STYLE1">
                    II级机构
                </td>
                <td width="13%" class="TD_STYLE2">
                    <input type="hidden" value="@hm.second_kind_id" readonly="readonly" name="second_kind_id" class="INPUT_STYLE2" />
                    <input type="text" value="@hm.second_kind_name" readonly="readonly" name="second_kind_name" class="INPUT_STYLE2" />
                </td>
                <td width="10%" class="TD_STYLE1">
                    III级机构
                </td>
                <td class="TD_STYLE2" colspan="2" width="2%">
                    <input type="hidden" value="@hm.third_kind_id" readonly="readonly" name="third_kind_id" class="INPUT_STYLE2" />
                    <input type="text" value="@hm.third_kind_name" readonly="readonly" name="third_kind_name" class="INPUT_STYLE2" />
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    职位分类
                </td>
                <td class="TD_STYLE2">
                    <input type="hidden" value="@hm.human_major_kind_id" readonly="readonly" name="human_major_kind_id" class="INPUT_STYLE2" />
                    <input type="text" value="@hm.human_major_kind_name" readonly="readonly" name="human_major_kind_name" class="INPUT_STYLE2" />
                </td>
                <td class="TD_STYLE1">
                    职位名称
                </td>
                <td class="TD_STYLE2">
                    <input type="hidden" value="@hm.human_major_id" readonly="readonly" name="human_major_id" class="INPUT_STYLE2" />
                    <input type="text" value="@hm.hunma_major_name" readonly="readonly" name="hunma_major_name" class="INPUT_STYLE2" />
                </td>
                <td class="TD_STYLE1">
                    职称
                </td>
                <td colspan="2" class="TD_STYLE2">
                    <select class="SELECT_STYLE1" name="human_pro_designation">
                        @foreach (config_public_char item in ViewData["designation"] as List<config_public_char>)
                        {
                            <option value="@item.attribute_name" @((item.attribute_name == @hm.human_pro_designation) ? "selected" : "")>@item.attribute_name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    姓名
                </td>
                <td class="TD_STYLE2">
                    <input type="text" id="humanName" name="human_name" value="@hm.human_name"
                           class="INPUT_STYLE2">
                </td>
                <td class="TD_STYLE1">
                    性别
                </td>
                <td class="TD_STYLE2">
                    <select class="SELECT_STYLE1" name="human_sex">
                        <option @((hm.human_sex == "男") ? "selected" : "")>男</option>
                        <option @((hm.human_sex == "女") ? "selected" : "")>女</option>
                    </select>
                </td>
                <td class="TD_STYLE1">
                    EMAIL
                </td>
                <td colspan="2" class="TD_STYLE2">
                    <input type="text" name="human_email" value="@hm.human_email"
                           class="INPUT_STYLE2" id="humanEmail">
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    电话
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="human_telephone" value="@hm.human_telephone"
                           class="INPUT_STYLE2" id="humanTelephone">
                </td>
                <td class="TD_STYLE1">
                    QQ
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="human_qq" value="@hm.human_qq"
                           class="INPUT_STYLE2" id="humanQq">
                </td>
                <td class="TD_STYLE1">
                    手机
                </td>
                <td colspan="2" class="TD_STYLE2">
                    <input type="text" name="human_mobilephone" id="humanMobilephone"
                           value="@hm.human_mobilephone" class="INPUT_STYLE2">
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    住址
                </td>
                <td colspan="3" class="TD_STYLE2">
                    <input type="text" name="human_address" value="@hm.human_address"
                           class="INPUT_STYLE2">
                </td>
                <td class="TD_STYLE1">
                    邮编
                </td>
                <td colspan="2" class="TD_STYLE2">
                    <input type="text" name="human_postcode" value="@hm.human_postcode"
                           class="INPUT_STYLE2">
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    国籍
                </td>
                <td class="TD_STYLE2">
                    <select name="human_nationality" class="SELECT_STYLE1">
                        @foreach (config_public_char item in ViewData["guoji"] as List<config_public_char>)
                        {
                            <option value="@item.attribute_name" @((item.attribute_name == @hm.human_nationality) ? "selected" : "")>@item.attribute_name</option>
                        }
                    </select>
                </td>
                <td class="TD_STYLE1">
                    出生地
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="human_birthplace" value="@hm.human_birthplace"
                           class="INPUT_STYLE2">
                </td>
                <td class="TD_STYLE1">
                    生日
                </td>
                <td width="13%" class="TD_STYLE2">
                    <input type="text" name="startDate" onclick="aa('startDate')" readonly="readonly"
                           value="@hm.human_birthday" class="INPUT_STYLE2" id="birthday">
                </td>
                <td width="10%" class="TD_STYLE1">
                    民族
                </td>
                <td class="TD_STYLE2">
                    <select name="human_race" class="SELECT_STYLE1">
                        @foreach (config_public_char item in ViewData["mingzu"] as List<config_public_char>)
                        {
                            <option value="@item.attribute_name" @((item.attribute_name == @hm.human_race) ? "selected" : "")>@item.attribute_name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    宗教信仰
                </td>
                <td class="TD_STYLE2">
                    <select name="human_religion" class="SELECT_STYLE1">
                        @foreach (config_public_char item in ViewData["zongj"] as List<config_public_char>)
                        {
                            <option value="@item.attribute_name" @((item.attribute_name == @hm.human_religion) ? "selected" : "")>@item.attribute_name</option>
                        }
                    </select>
                </td>
                <td class="TD_STYLE1">
                    政治面貌
                </td>
                <td class="TD_STYLE2">
                    <select name="human_party" class="SELECT_STYLE1">
                        @foreach (config_public_char item in ViewData["zzmmao"] as List<config_public_char>)
                        {
                            <option value="@item.attribute_name" @((item.attribute_name == @hm.human_party) ? "selected" : "")>@item.attribute_name</option>
                        }
                    </select>
                </td>
                <td class="TD_STYLE1">
                    身份证号码
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="human_id_card" id="humanIdCard"
                           value="@hm.human_id_card" class="INPUT_STYLE2">
                </td>
                <td class="TD_STYLE1">
                    社会保障号码
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="human_society_security_id" value="@hm.human_society_security_id"
                           class="INPUT_STYLE2">
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    年龄
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="human_age" value="@hm.human_age"
                           class="INPUT_STYLE2" id="humanAge">
                </td>
                <td class="TD_STYLE1">
                    学历
                </td>
                <td class="TD_STYLE2">
                    <select name="human_educated_degree" class="SELECT_STYLE1">
                        @foreach (config_public_char item in ViewData["xueli"] as List<config_public_char>)
                        {
                            <option value="@item.attribute_name" @((item.attribute_name == @hm.human_educated_degree) ? "selected" : "")>@item.attribute_name</option>
                        }
                    </select>
                </td>
                <td class="TD_STYLE1">
                    教育年限
                </td>
                <td class="TD_STYLE2">
                    <select name="human_educated_years" class="SELECT_STYLE1">
                        @foreach (config_public_char item in ViewData["jyuage"] as List<config_public_char>)
                        {
                            <option value="@item.attribute_name" @((item.attribute_name == hm.human_educated_years.ToString()) ? "selected" : "")>@item.attribute_name</option>
                        }
                    </select>
                </td>
                <td class="TD_STYLE1">
                    学历专业
                </td>
                <td class="TD_STYLE2">
                    <select name="human_educated_major" class="SELECT_STYLE1">
                        @foreach (config_public_char item in ViewData["zhuanye"] as List<config_public_char>)
                        {
                            <option value="@item.attribute_name" @((item.attribute_name == hm.human_educated_major) ? "selected" : "")>@item.attribute_name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    薪酬标准
                </td>
                <td class="TD_STYLE2">
                    <select name="salary_standard_id" class="SELECT_STYLE1" id="standid" onchange="standchange()">
                        @foreach (salary_standard item in ViewData["salarystrandard"] as List<salary_standard>)
                        {
                            <option value="@item.standard_id" @((item.standard_id == hm.salary_standard_id) ? "selected" : "")>@item.standard_name</option>
                        }
                    </select>
                    <input type="hidden" name="salary_standard_name" id="standname" />
                </td>
                <td class="TD_STYLE1">
                    开户行
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="human_bank" value="@hm.human_bank"
                           class="INPUT_STYLE2">
                </td>
                <td class="TD_STYLE1">
                    帐号
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="human_account"
                           value="@hm.human_account" class="INPUT_STYLE2">
                </td>
                <td class="TD_STYLE1">
                    变更人
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="changer" value="谢鹏"
                           readonly="readonly" class="INPUT_STYLE2">
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    变更时间
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="change_time"
                           id="create_time" readonly="readonly"
                           class="INPUT_STYLE2">
                </td>
                <td class="TD_STYLE1">
                    特长
                </td>
                <td class="TD_STYLE2">
                    <select name="human_speciality" class="SELECT_STYLE1">
                        @foreach (config_public_char item in ViewData["techang"] as List<config_public_char>)
                        {
                            <option value="@item.attribute_name" @((item.attribute_name == hm.human_speciality) ? "selected" : "")>@item.attribute_name</option>
                        }
                    </select>
                </td>
                <td class="TD_STYLE1">
                    爱好
                </td>
                <td class="TD_STYLE2">
                    <select name="human_hobby" class="SELECT_STYLE1">
                        @foreach (config_public_char item in ViewData["aihao"] as List<config_public_char>)
                        {
                            <option value="@item.attribute_name" @((item.attribute_name == hm.human_hobby) ? "selected" : "")>@item.attribute_name</option>
                        }
                    </select>
                </td>
                <td class="TD_STYLE1">
                    &nbsp;
                </td>
                <td class="TD_STYLE2">
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    档案附件
                </td>
                <td colspan="7" class="TD_STYLE2">
                    <a href="javascript:winopenm('D:\Y2.net\Y2.net\mvc\hr\HR\UI\images\@hm.attachment_name')">@hm.attachment_name</a>
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    个人履历
                </td>
                <td colspan="7" class="TD_STYLE2">
                    <textarea name="human_histroy_records" rows="4"
                              class="TEXTAREA_STYLE1">
                        @hm.human_histroy_records
                        </textarea>
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        家庭关系信息
                    </td>
                    <td colspan="7" class="TD_STYLE2">
                        <textarea name="human_family_membership" rows="4"
                                  class="TEXTAREA_STYLE1">
                            @hm.human_family_membership
                            </textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="TD_STYLE1">备注</td>
                        <td colspan="7" class="TD_STYLE2">
                            <textarea name="remark" rows="4" class="TEXTAREA_STYLE1">@hm.remark</textarea>
                        </td>
                    </tr>
                </table>
            </form>

            <script>
                //提交获取薪酬获取id和name
                function tijiao() {
                    $("#standname").val($("#standid").find("option:selected").text());
                }
        //薪酬选中获取id和name
        function standchange() {
            
            $("#standname").val($("#standid").find("option:selected").text());
            //alert($("#standid").find("option:selected").text());
        }
        $(function () {


        });

            </script>
</body>
</html>
