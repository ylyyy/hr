            url: "/transfer_locate/selectFirst",
            type: "get",
            success: function (data) {
                @*$("#firstKindId option[value='@ViewBag.Nfirst_kind_id']").attr("selected", "selected");*@
                $("#firstKindId option").remove();
                for (var i = 0; i < data.length; i++) {
                    let id = "0";
                    id=id+@ViewBag.Nfirst_kind_id;
                    if (id== data[i].first_kind_id) {
                        $op = $("<option value='" + data[i].first_kind_id + "' selected='selected'>" + data[i].first_kind_name + "</option>")
                    }
                    else
                    {
                        $op = $("<option value='" + data[i].first_kind_id + "'>" + data[i].first_kind_name + "</option>")
                    }






                    $("#firstKindId").append($op);
                }
            }


        });

        //下拉框新职位分类的加载
        $.ajax({
            url: "/transfer_locate/selectKind",
            type: "get",
            success: function (data) {
                $("#newMajorKindId option").remove();
                for (var i = 0; i < data.length; i++) {
                    if (@ViewBag.new_major_kind_id==data[i].major_kind_id) {
                        var $op = $("<option value='" + data[i].major_kind_id + "'selected='selected'>" + data[i].major_kind_name + "</option>")

                    }
                    else
                    {
                        var $op = $("<option value='" + data[i].major_kind_id + "'>" + data[i].major_kind_name + "</option>")

                    }

                    $("#newMajorKindId").append($op);
                }
            }
        });
        //薪酬标准的显示
        $.ajax({
            url: "/transfer_locate/selectSalaryName",
            type: "post",
            success: function (data) {
                $("#newSalaryStandardId #op1 prev").remove();
                for (var i = 0; i < data.length; i++) {
                    var $op = $("<option value='" + data[i].standard_id + "'>" + data[i].standard_name + "</option>")
                    $("#newSalaryStandardId").append($op);
                }
            }

        });

        var fid;//新一级机构的ID
        var sid;//新二级机构的ID
        var kid;//分类ID
        var mid;//职位ID
        var StanID;//薪酬标准名称ID
        $(function () {
            $("#firstKindId").change(function () {

                fid = $("#firstKindId  option:selected").val();
                $("#thirdKindId option").remove();

                $("#thirdKindId ").append("<option value='0'>-----请选择-----</option>")

                $.ajax({
                    url: "/transfer_locate/selectSecondByFID",
                    data: "fid=" + fid,
                    type: "post",
                    success: function (data) {
                        $("#secondKindId option").remove();
                        for (var i = 0; i < data.length; i++) {
                            var $op = $("<option value='" + data[i].second_kind_id + "'>" + data[i].second_kind_name + "</option>")
                            $("#secondKindId").append($op);
                        }

                    }
                });



            });

            //第二机构下拉框的文本改变出现第三机构
            $("#secondKindId").change(function () {
                sid = $("#secondKindId  option:selected").val();
                fid = $("#firstKindId  option:selected").val();
                $.ajax({
                    url: "/transfer_locate/selectThirdByFID",
                    type: "post",
                    data: {
                        "sid": sid,
                        "fid": fid
                    },
                    success: function (data) {

                        if (data.length == 0) {
                            $("#thirdKindId option").remove();

                            var $op = $("<option value='0'>-----请选择-----</option>")
                            $("#thirdKindId").append($op);
                        }
                        else {
                            $("#thirdKindId option").remove();
                            for (var i = 0; i < data.length; i++) {
                                var $op = $("<option value='" + data[i].third_kind_id + "'>" + data[i].third_kind_name + "</option>")
                                $("#thirdKindId").append($op);
                            }
                        }


                    }

                });


            });

            //根据下拉框职位分类的文本改变显示职位名称
            $("#newMajorKindId").change(function () {
                kid = $("#newMajorKindId").val();
                $.ajax({
                    url: "/transfer_locate/selectThirdByKID",
                    type: "post",
                    data: {
                        "kid": kid,
                    },
                    success: function (data) {
                        $("#newMajorId option").remove();

                        for (var i = 0; i < data.length; i++) {
                            var $op = $("<option value='" + data[i].major_id + "'>" + data[i].major_name + "</option>")
                            $("#newMajorId").append($op);
                        }
                    }
                });
            });
            //薪酬标准文本改变显示总工资
            $("#newSalaryStandardId").change(function () {
                StanID = $("#newSalaryStandardId").val();
                $.ajax({
                    url: "/transfer_locate/selectSalarySumByStanID",
                    type: "post",
                    data: {
                        "StanID": StanID,
                    },
                    success: function (data) {
                        if (data.length == 0) {
                            $("#newSalarySum").val("0.00")
                        }
                        else {
                            $("#newSalarySum").val(data[0].salary_sum);

                        }

                    }

                });


            });













        });

