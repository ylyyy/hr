
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>major</title>
    <script src="~/javascript/comm/comm.js"></script>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script type="text/javascript">
        $(function () {
            $.post("/client/majorIndex", "", function (data) {
                //mak_id, major_kind_id, major_kind_name, major_id, major_name, test_amount
                var datas = eval("(" + data + ")");
                var $table = $("#tb1");
                for (var i = 0; i < datas.length; i++) {
                    var $tr = $("<tr></tr>");
                    var $td = $("<td class='TD_STYLE2'>" + datas[i].major_kind_id + "</td><td class='TD_STYLE2'>" + datas[i].major_kind_name + "</td><td class='TD_STYLE2'>" + datas[i].major_id + "</td><td class='TD_STYLE2'>" + datas[i].major_name + "</td>");
                    var $td1 = $("<td class='TD_STYLE2'><a href='/client/major_delete/" + datas[i].mak_id + "'>删除</a></td>");
                    $tr.append($td, $td1);
                    $table.append($tr);
                };
            });
        });
    </script>
</head>
<body>
    <div> 
        <form method="post" action="../customiz/customizAction!findMajor">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="添加" class="BUTTON_STYLE1"
                               onclick="window.location.href = '/client/major_add';">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1" id="tb1">
                <tr>
                    <td width="22%" class="TD_STYLE1">
                        职位分类编号
                    </td>
                    <td width="23%" class="TD_STYLE1">
                        职位分类名称
                    </td>
                    <td width="26%" class="TD_STYLE1">
                        职位编号
                    </td>
                    <td width="24%" class="TD_STYLE1">
                        职位名称
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        删除
                    </td>
                </tr>
            </table>
            <p>

        </form>
    </div>
</body>
</html>
