@model Entity.config_file_first_kind

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>first_kind_change</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--I级机构设置--I级机构变更
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="submit" value="提交" class="BUTTON_STYLE1" />
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               onclick="history.back();">
                    </td>
                </tr>
            </table>

            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        I级机构编号
                        @Html.HiddenFor(model => model.ffk_id, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                    <td width="81%" class="TD_STYLE2">
                        @Html.EditorFor(model => model.first_kind_id, new { htmlAttributes = new { @class = "INPUT_STYLE1", @readonly=true} })
                        @Html.ValidationMessageFor(model => model.first_kind_id, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        I级机构名称
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.first_kind_name, new { htmlAttributes = new { @class = "INPUT_STYLE1",@readonly=true} })
                        @Html.ValidationMessageFor(model => model.ffk_id, "", new { @class = "text-danger" })
                        
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        薪酬发放责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextAreaFor(model => model.first_kind_salary_id, new {@class = "TEXTAREA_STYLE1", @rows = 4 })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                       @Html.TextAreaFor(model => model.first_kind_sale_id, new {  @class = "TEXTAREA_STYLE1", @rows = 4 })
                    </td>
                </tr>
            </table>
        </div>
    }
</body>
</html>
