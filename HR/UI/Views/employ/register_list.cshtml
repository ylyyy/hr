          type="text/css">
    <script type="text/javascript"
            src="../../../javascript/comm/comm.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/comm/list.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/calendar-ch.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/locate.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/select.js">

    </script>
    <script type="text/javascript">
        var currentPage = 1;
        var pages = 0;
        var interview_status = 2;
        function jiaZai() {
            $.post("/employ/register_listIndex", { "currentPage": currentPage,"interview_status": interview_status }, function (data) {
                var datas = eval("(" + data + ")");
                var $table = $("#tb1");
                pages = datas["pages"];
                $("#tb1 tr:gt(0)").remove();
                for (var i = 0; i < datas["list"].length; i++) {
                    var $tr = $("<tr></tr>");
                    var $td = $("<td class='TD_STYLE2'>" + datas["list"][i]["human_name"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["human_sex"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["human_age"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["human_major_kind_name"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["human_major_name"] + "</td>");
                    var $td1 = $("<td class='TD_STYLE2'>" + datas["list"][i]["human_college"] + "</td><td class='TD_STYLE2'>" + datas["list"][i]["human_educated_major"] + "</td><td><a href='/employ/register/" + datas["list"][i]["res_id"] + "'>申请</a></td>");
                    $tr.append($td, $td1);
                    $table.append($tr);
                }
                $("#yi").text("总数" + datas["rows"] + "例");
                $("#er").text("当前第" + currentPage + " 页 /每页显示 2条");
                $("#san").text("共" + datas["pages"] + "页 ");
            });
        }
        $(function () {
            jiaZai()
            $("#shang").click(function () {
                if (currentPage > 1) {
                    currentPage--;
                    jiaZai()
                }
            });
            $("#xia").click(function () {
                if (currentPage < pages) {
                    currentPage++;
                    jiaZai()
                }
            });
            $("#tiao").click(function () {
                var currPage = $("#currPage").val();
                if (currPage > 1 && currPage < pages) {
                    currentPage = currPage;
                    jiaZai()
                } else {
                    alert("输入的值大于该页数，或者小于0");
                }
            });
        })
    </script>
</head>

<body>
        <input type="hidden" name="utilBean.currPage" id="page" />
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--招聘管理--录用管理--录用申请  </font>
                </td>
            </tr>

        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1" id="tb1">
            <tr class="TR_STYLE1">
                <td class="TD_STYLE1">
                    姓名
                </td>
                <td class="TD_STYLE1">
                    性别
                </td>
                <td class="TD_STYLE1">
                    年龄
                </td>
                <td class="TD_STYLE1">
                    职位类别
                </td>
                <td class="TD_STYLE1">
                    职位名称
                </td>
                <td class="TD_STYLE1">
                    毕业院校
                </td>
                <td class="TD_STYLE1">
                    学历专业
                </td>
                <td class="TD_STYLE1">
                    申请
                </td>
            </tr>
        </table>
        <p>
            &nbsp;&nbsp;<span id="yi"></span> &nbsp;&nbsp;&nbsp;<span id="er"></span> &nbsp;&nbsp;&nbsp;<span id="san"></span> &nbsp;&nbsp;&nbsp;
            <a href="javascript:void(0)" id="shang">上一页</a> &nbsp;&nbsp;&nbsp;
            <a href="javascript:void(0)" id="xia">下一页</a> &nbsp;&nbsp;&nbsp;跳到第 <input name=page type=text class=input1 id="currPage" size=1> 页&nbsp;&nbsp;<input type="image" src="../../../images/go.bmp" width=18 height=18 border=0 id="tiao">
</body>
</html>
