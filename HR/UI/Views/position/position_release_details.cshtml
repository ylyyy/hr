@model Entity.engage_major_release

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>position_release_details</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <link href="~/css/cwcalendar.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
    <script src="~/javascript/comm/list.js"></script>
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script src="~/javascript/calendar-ch.js"></script>
    <script src="~/javascript/locate.js"></script>
    <script src="~/javascript/select.js"></script>
    <script src="~/javascript/comm/time.js"></script>
</head>
<body>
    <div>
        <form name="fm" action="/resume/registerIndex/" method="post" enctype="multipart/form-data">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">人力资源--招聘管理--职位发布管理--职位发布查询--详细</font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="确认申请" class="BUTTON_STYLE1">
                    <input type="reset" value="返回" class="BUTTON_STYLE1" onclick="history.back();">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td class="TD_STYLE1" width="11%">
                    I级机构
                </td>
                <td width="14%" class="TD_STYLE2">
                    <input type="hidden" value="@Model.mre_id" name="mre_id">
                    <input type="text" name="first_kind_name" value="@Model.first_kind_name" readonly class="INPUT_STYLE2"/>
                </td>
                <td width="11%" class="TD_STYLE1">
                    II级机构
                </td>
                <td width="14%" class="TD_STYLE2">
                    <input type="text" name="second_kind_name" value="@Model.second_kind_name" readonly class="INPUT_STYLE2"/>
                </td>
                <td width="11%" class="TD_STYLE1">
                    III级机构
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="third_kind_name" value="@Model.third_kind_name" readonly class="INPUT_STYLE2"/>
                </td>
                <td width="11%" class="TD_STYLE1">
                    招聘类型
                </td>
                <td class="TD_STYLE2" colspan="2">
                    <input type="text" name="engage_type" value="@Model.engage_type" readonly class="INPUT_STYLE2"/>
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    职位分类
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="major_kind_name" value="@Model.major_kind_name" readonly class="INPUT_STYLE2"/>
                </td>
                <td class="TD_STYLE1">
                    职位名称
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="major_name" value="@Model.major_name" readonly class="INPUT_STYLE2"/>
                </td>
                <td class="TD_STYLE1">
                    招聘人数
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="human_amount" value="@Model.human_amount" class="INPUT_STYLE2" readonly class="INPUT_STYLE2">
                </td>
                <td class="TD_STYLE1">
                    截止日期
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="deadline"
                           class="INPUT_STYLE2" value="@Model.deadline" readonly class="INPUT_STYLE2">
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    登记人
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="changer" class="INPUT_STYLE2" value="@Model.register" readonly>
                </td>
                <td class="TD_STYLE1">
                    登记时间
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="change_time"
                           value="@Model.regist_time " id="nowTime" readonly
                           class="INPUT_STYLE2">
                </td>

                <td>&nbsp; </td>
                <td>&nbsp; </td>
                <td>&nbsp; </td>
                <td>&nbsp; </td>

            </tr>
            <tr>
                <td class="TD_STYLE1">
                    职位描述
                </td>
                <td class="TD_STYLE2" colspan="8">
                    <textarea name="major_describe" rows="4" cols="100%" class="TEXTAREA_STYLE1" readonly>@Model.major_describe</textarea>
                </td>

            </tr>
            <tr>
                <td class="TD_STYLE1">
                    招聘要求
                </td>
                <td class="TD_STYLE2" colspan="8">
                    <textarea name="engage_required" rows="4" cols="100%" class="TEXTAREA_STYLE1" readonly>@Model.engage_required</textarea>
                </td>

            </tr>
        </table>
            </form>
    </div>
</body>
</html>
