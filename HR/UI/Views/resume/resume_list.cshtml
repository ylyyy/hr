@model IEnumerable<Entity.engage_resume>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>resume_list</title>
    <link rel="stylesheet"
          href="../../../css/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../../css/cwcalendar.css" type="text/css">
    <script type="text/javascript"
            src="../../../javascript/comm/comm.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/comm/list.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/calendar-ch.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/locate.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/select.js">
    </script>
</head>
<body>
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--招聘管理--简历管理--简历筛选--简历筛选列表
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="button" value="返回" class="BUTTON_STYLE1" onclick="history.back();">
            </td>
        </tr>
        </table>
    <table width="100%" border="1" cellpadding=0 cellspacing=1
				bordercolorlight=#848284 bordercolordark=#eeeeee
				class="TABLE_STYLE1">
            <tr>
                <td width="15%" class="TD_STYLE1">
                    档案编号
                </td>
                <td width="15%" class="TD_STYLE1">
                    姓名
                </td>
                <td width="15%" class="TD_STYLE1">
                    性别
                </td>
                <td width="15%" class="TD_STYLE1">
                    职位分类
                </td>
                <td width="10%" class="TD_STYLE1">
                    职位名称
                </td>
                <td width="10%" class="TD_STYLE1">
                    电话号码
                </td>
                <td width="10%" class="TD_STYLE1">
                    复核状态
                </td>
                <td width="10%" class="TD_STYLE1">
                    复核
                </td>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.res_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.human_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.human_sex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.human_major_kind_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.human_major_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.human_telephone)
                    </td>
                    <td>
                        @Html.HiddenFor(modelItem => item.check_status)
                        <span>@(item.check_status == 0 ? "待复核" : "复核")</span>
                    </td>
                    <td>
                        <a href="/resume/resume_details/@item.res_id">复核</a>
                    </td>
                </tr>
            }
        </table>
</body>
</html>
