
@{
    ViewBag.Title = "Index";
}


<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link href="~/CSS/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        var currentPage = 0;
        var page = 0;
        var rows = 0;

        $(function () {
            currentPage = 1;
            fill();
        })

        function fill() {
            $.ajax({
                url: "/major_change2/Index2?currentPage="+currentPage,
                type: "get",
                success: function (img) {
                    var data = eval("(" + img + ")");
                    var dt = data["dt"];
                    $("#tables tr:gt(0)").remove();
                    for (var i = 0; i < dt.length; i++) {
                        var $tr = $("<tr></tr>");
                        var $td = $("<td>" + dt[i]["first_kind_name"] + "</td>");
                        var $td2 = $("<td>" + dt[i]["second_kind_name"] + "</td>");
                        var $td3 = $("<td>" + dt[i]["third_kind_name"] + "</td>");
                        var $td4 = $("<td>" + dt[i]["salary_standard_name"] + "</td>");
                        var $td5 = $("<td>" + dt[i]["human_name"] + "</td>");
                        var $td6 = $("<td><a href='/major_change2/Update/" + dt[i]["mch_id"] + "'>审核</a></td>");
                        $tr.append($td, $td2, $td3, $td4, $td5, $td6);
                        $("#tables").append($tr);
                    }
                    page = data["page"];
                    rows = data["rows"];
                    $("#zs").text(rows);
                    $("#mt").text("2");
                    $("#dq").text(currentPage);
                    $("#gy").text(page);
                }
            })
        }

        function sy() {
            currentPage = 1;
            fill();
        }
        function syy() {
            if (currentPage > 1) {
                currentPage--;
            } else {
                currentPage = 1;
            }
            fill();
        }
        function wy() {
            currentPage = page;
            fill();
        }
        function xyy() {
            if (page > currentPage) {
                currentPage++;
            }
            fill();
        }
        
    </script>

</head>

<body>
    <form method="post" action="check_list.html">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--调动管理--调动审核列表</font>
                </td>
            </tr>
            <tr>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td>
                    当前待复核的调动人数:1
                    例
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1" id="tables">
            <tr height="21">
                <td width="19%" class="TD_STYLE1">
                    I级机构
                </td>
                <td width="19%" class="TD_STYLE1">
                    II级机构
                </td>
                <td width="19%" class="TD_STYLE1">
                    Ⅲ级机构
                </td>
                <td width="19%" class="TD_STYLE1">
                    薪酬标准
                </td>
                <td width="19%" class="TD_STYLE1">
                    名字
                </td>
                <td width="5%" class="TD_STYLE1">
                    审核
                </td>

            </tr>
        </table>


        <html>
        <head>
        </head>
        <body>
            <p>
                <div align="center" style="font-size: 18px;color: gray">
                    &nbsp;&nbsp;总数：
                    <font style="color: maroon;font-weight: bold;" id="zs">14</font>
                    例
                    &nbsp;&nbsp;&nbsp;
                    每页显示 <font style="color: maroon;font-weight: bold;" id="mt">10</font>
                    条
                    &nbsp;&nbsp;&nbsp;
                    当前第 <font style="color: maroon;font-weight: bold;" id="dq">1</font>
                    页
                    &nbsp;&nbsp;&nbsp;共
                    <font style="color: maroon;font-weight: bold;" id="gy">2</font>
                    页

                    <a href="#" style="color:black;" onclick="sy()">首页</a>
                    <a href="#" style="color:black;" onclick="syy()">上一页</a>
                    <a style="color: navy;font-weight: bold"
                       href="#" onclick="xyy()">下一页</a>

                    <a style="color: navy;font-weight: bold"
                       href="#" onclick="wy()">末页</a>
                    &nbsp;&nbsp;&nbsp;跳到第
                    <input id=page type=text value="1" class=input1 size=1>
                    页&nbsp;&nbsp;
                    <input type="image" onclick="dopagebybutton()" src="../../images/go.bmp" width=18 height=18 border=0>
                    <input type="hidden" name="page.startPage" id="startpage" value="1">
                </div>
        </body>
    </html>


</form>
</body>
